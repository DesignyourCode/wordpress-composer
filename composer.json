{
    "name": "designyourcode/wordpress-composer",
    "description": "Install WordPress with Composer.",
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "composer/installers": "@stable",
        "wp-cli/wp-cli": "@stable",
        "wp-cli/php-cli-tools": "@stable",
        "johnpbloch/wordpress": "@stable",

        "upstatement/timber-starter-theme": "dev-master"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "wp-content/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "wp-content/themes/{$name}": [
                "type:wordpress-theme"
            ]
        }
    },
    "scripts": {
        "generate-salts": [
            "echo '<?php' > salt.php && curl -L https://api.wordpress.org/secret-key/1.1/salt/ >> salt.php"
        ],
        "post-create-project-cmd": [
            "composer run generate-salts",
            "wp plugin activate --all"
        ],
        "compile": [
            "php bin/populate-config-from-env.php"
        ]
    }
}
